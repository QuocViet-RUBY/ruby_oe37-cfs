<h1 class="col-md-10 col-lg-offset-1 text-center"><%= t ".summary" %></h1>
<table class="table table-bordered">
  <tr class="bg-primary">
    <th class="text-center col-md-2"><%= t ".total_expenses" %></th>
    <th class="text-center col-md-2"><%= t ".total_income" %></th>
    <th class="text-center col-md-2"><%= t ".difference" %></th>
  </tr>
  <tr>
    <td scope="row"><%= number_to_currency(total_expenses) %></td>
    <td scope="row"><%= number_to_currency(total_income) %></td>
    <td class="<%= difference.negative? ? 'text-danger' : 'text-success' %>" scope="row"><%= number_to_currency(difference) %></td>
  </tr>
</table>
<h3 class="text-danger"><%= t ".warning" if difference.negative? %></h3>
