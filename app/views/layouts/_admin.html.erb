    <%= link_to t(".cash_flow_management"), home_path, id: "logo" %>
    <nav>
      <ul class="nav navbar-nav navbar-right">
        <% if logged_in? %>
        <li><%= link_to t("static_pages.home.home"), home_path %></li>
