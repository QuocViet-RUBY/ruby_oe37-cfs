<% provide :title, t("account.forgot_title") %>
<h1 class="center"><%= t("account.forgot_title") %></h1>

<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_for(:password_reset, url: password_resets_path) do |f| %>
      <%= f.label :email %>
      <%= f.email_field :email, class: "form-control" %>

      <%= f.submit t("account.submit"), class: "btn btn-primary" %>
    <% end %>
  </div>
</div>
