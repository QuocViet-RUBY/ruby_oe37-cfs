<div class="col-md-10 col-lg-offset-1">
  <table class="table text-center" style="border: 2px solid black;">
    <tr class="bg-primary">
      <th class="text-center col-md-1"><%= t("category.indexx") %></th>
      <th class="text-center col-md-3"><%= t("category.namee") %></th>
      <th class="text-center col-md-3"><%= t("category.actions") %></th>
    </tr>
    <% if object.present? %>
      <% object.each_with_index do |item, index| %>
        <tr class="bg-success">
          <td><%= create_index params[:page], index, Settings.user.page %></td>
          <td scope="row"><%= item.name %></td>
          <td scope="row"><%= link_to t("category.submit_delete"), item, method: :delete, data: { confirm: t("category.you_sure") } %></td>
        </tr>
      <% end %>
    <% else %>
      <tr class="bg-success">
        <td colspan="3"><%= t("category.no_categories") %></td>
      </tr>
    <% end %>
  </table>
  <div id="paginator">
    <%= paginate object %>
  </div>
</div>
